<resources>
    <bool name="def_accelerometer_rotation">true</bool>
    <bool name="def_screen_brightness_automatic_mode">false</bool>
    <integer name="def_screen_off_timeout">60000</integer>
    <integer name="def_lockscreen_sounds_enabled">0</integer>
    <!-- Default for Settings.System.POINTER_SPEED -->
    <integer name="def_pointer_speed">50</integer>
    <!-- Default for UI touch sounds enabled -->
    <bool name="def_sound_effects_enabled">false</bool>
    <bool name="def_install_non_market_apps">true</bool>
    <bool name="def_notifications_use_ring_volume">false</bool>
    <integer name="def_wifi_sleep_policy">2</integer>

<!-- Timeout in MS for how long you have to long-press the back key to
         kill the foreground app. -->
<add-resource type="integer" name="config_backKillTimeout">
   <integer name="config_backKillTimeout">1200</integer>
</add-resource>

 <!-- Enable Expanded Desktop feature in CyanogenMod -->
<add-resource type="bool" name="config_show_expandedDesktop">
    <bool name="config_show_expandedDesktop">true</bool>
</add-resource>

<!-- Boolean indicating if current platform supports quick switch-on/off of Bluetooth Module -->
<add-resource type="bool" name="config_bluetooth_adapter_quick_switch">
    <bool name="config_bluetooth_adapter_quick_switch">false</bool>
</add-resource>

<!-- Hardware 'face' keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant (search)
            16 - App switch
         For example, a device with Home, Back and Menu keys would set this
         config to 7. -->
<add-resource type="integer" name="config_deviceHardwareKeys">
    <integer name="config_deviceHardwareKeys">15</integer>
</add-resource>

    <!-- Volume Rocker Wake Support. Some devices do not support (PMU) this.
         Setting to false will disable Volume Rocker Wake support -->
<add-resource type="bool" name="config_show_volumeRockerWake">
    <bool name="config_show_volumeRockerWake">true</bool>
</add-resource>

</resources>

